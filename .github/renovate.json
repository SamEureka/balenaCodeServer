{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "docker": {
    "fileMatch": ["Dockerfile.template"]
  },
  "packageRules": [
    {
      "matchPackageNames": ["linuxserver/code-server"],
      "matchBaseBranches": ["main"]
    },
    {
      "matchPackageNames": ["balena-io/balena-cli"],
      "matchDatasources": ["github-releases"],
      "updateTypes": ["github-release"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["patch", "minor", "bump"],
      "automerge": true
    }
  ]
}