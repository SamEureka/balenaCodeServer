{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchPackageNames": ["linuxserver/code-server"],
      "matchBaseBranches": ["main"]
    },
    {
      "packagePatterns": ["balena-io/balena-cli"],
      "updateTypes": ["github-releases"],
      "enabled": true
    }
  ],
  "packageFiles": ["Dockerfile", "balena.yml"],
  "packageRules": [
    {
      "updateTypes": ["docker", "balena"]
    }
  ]
}
